<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(review) -%>">
  <span class='title'>
    <%= review.name %>
  </span>

  <span class='preview'></span>

  <span class='actions'>
    <%= action_icon(:preview, refinery.reviews_review_path(review), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_reviews_admin_review_path(review), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.reviews_admin_review_path(review), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: review.name)}}  ) %>
  </span>
</li>
