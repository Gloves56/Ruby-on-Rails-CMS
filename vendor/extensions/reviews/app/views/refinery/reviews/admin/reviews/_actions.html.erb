<ul>
  <% if ::Refinery::Reviews::Admin::ReviewsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.reviews_admin_reviews_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_reviews_admin_review_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Reviews::Admin::ReviewsController.sortable? && ::Refinery::Reviews::Review.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.reviews_admin_reviews_path,
                     t('.reorder', what:  "Reviews"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.reviews_admin_reviews_path,
                      t('.reorder_done', what: "Reviews"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
