<%= form_for [refinery, :reviews_admin, @review] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @review,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :user_name -%>
    <%= f.text_field :user_name -%>
  </div>

  <div class='field'>
    <%= f.label :reviewed_on -%>
    <%= f.date_select :reviewed_on -%>
  </div>

  <div class='field'>
    <%= f.label :photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_id,
               :image => @review.photo,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:description],
                :object => "reviews/review" -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.reviews.admin.reviews.review'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @review.name) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
